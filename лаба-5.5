#include <stdio.h>
#include <math.h>

int main()
{
    float x1, y1, x2, y2, x3, y3, resP, resS, a, b, c, p;
    printf("Введите координаты точки A через пробел: ");
    scanf("%f%f", &x1, &y1);
    printf("Введите координаты точки B через пробел: ");
    scanf("%f%f", &x2, &y2);
    printf("Введите координаты точки С через пробел: ");
    scanf("%f%f", &x3, &y3);
    a = sqrt(pow((x2 - x1), 2) + pow((y2 - y1), 2));
    b = sqrt(pow((x3 - x2), 2) + pow((y3 - y2), 2));
    c = sqrt(pow((x1 - x3), 2) + pow((y1 - y3), 2));
    resP = a + b + c;
    p = resP / 2;
    resS = sqrt(p * (p - a) * (p - b) * (p - c));
    printf("Периметр треугольника равен: %f       Площадь треугольника равна: %f", resP, resS);
    return 0;
}
