#include <stdio.h>
#include <math.h>

int main()
{
    float x1, x2, y1, y2, resS, resP, a , b;
    printf("Введите координату точки A через пробел: ");
    scanf("%f%f", &x1, &y1);
    printf("Введите координату точки B через пробел: ");
    scanf("%f%f", &x2, &y2);
    a = x2 - x1;
    b = y2 - y1;
    if (a < 0)
    {
        a = a * (-1);
    }
    if (b < 0)
    {
        b = b * (-1);
    }
    resP = (a + b) * 2;
    resS = a * b;
    printf("Периметр прямоугольника равен: %f       Площадь прямоугольника равна: %f", resP, resS);
    return 0;
}
